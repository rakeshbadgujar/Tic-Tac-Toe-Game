<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/rl"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select X or O, to start with it"
        android:textSize="20dp"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:shadowColor="@android:color/holo_green_dark"
        android:textColor="@android:color/background_dark"
        />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rd"
        android:layout_marginTop="80dp"

        >
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/o"
            android:onClick="onClick"
            android:text="O"
            android:textSize="40dp"
            android:layout_gravity="center"
          android:layout_marginLeft="100dp"

            />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/x"
            android:onClick="onClick"
            android:text="X"
            android:textSize="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="100dp"
            />

    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Player 1 select Color"
        android:layout_marginTop="205dp"
        android:textSize="20dp"
        android:id="@+id/tvp1"

        android:textColor="@android:color/background_dark"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="195dp"
        android:layout_alignRight="@+id/tvp1"
        android:text="color selector"
        android:onClick="selectColor"
        android:id="@+id/bt1"

        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Player 2 select Color"
        android:layout_marginTop="275dp"
        android:textSize="20dp"
        android:id="@+id/tvp2"
        android:textColor="@android:color/background_dark"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="265dp"
        android:layout_alignRight="@+id/tvp2"
        android:text="color selector"
        android:onClick="selectColor"
        android:id="@+id/bt2"

        />

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="350dp"
        android:layout_centerHorizontal="true"
        android:text="submit"
        android:onClick="submit"
        android:id="@+id/bt3"

        />


</RelativeLayout>
